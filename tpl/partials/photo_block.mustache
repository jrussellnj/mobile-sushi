<div class="justify-content-center photo">
  <!-- Photo and link -->
  <a href="/photo/{{id}}">
    <img src="http://mobile.sushipopsicle.com/userimages/thumb/320x240{{photo}}" />
  </a>

  <!-- Title and user info -->
  <br />
  <div>
    {{^ title}}
      Untitled
    {{/ title}}

    {{# title}}
      {{title}}
    {{/ title}}

    <div class="name-date">
      <small>{{name}} at {{date}}</small>
    </div>

    <div class="comment-number">
      <span class="commentnum">{{commentnum}}</span> <img src="/images/bubble-dark.svg" style="width: 20px; float:right;" />
    </div>
  </div>
</div>
