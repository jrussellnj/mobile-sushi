<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width">

    <title>mobile.sushi</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600" rel="stylesheet">

    <script type="text/javascript" src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script type="text/javascript" src="/js/lib/pikaday.js"></script>
    <script type="text/javascript" src="/js/index.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/compressed/style.css" />
  </head>

  <body class="container">
    <header>
      <div class="row">
        <div class="col-12 text-center">
          <h1>mobile.sushipop</h1>
        </div>
      </div>

      <div class="row justify-content-center menu">
        <div class="col-8 text-center">
          <a href="/">Home</a>
          <a href="/account">Account</a>

          {{# is_logged_in}}
            <a href="/explore">Explore</a>
            <a href="/logout">Log Out</a>

            <span>
              {{# unread_comments}}
                <a href="#" id="unread-comments-bubble" data-unread="{{total_unread_comments}}" {{^ comments}}class="zero-unread"{{/ comments}}>
                    <div class="number-unread">{{total_unread_comments}}</div>

                  <img src="/images/bubble.svg" />
                </a>
              {{/ unread_comments}}
              <div id="unread-comments-details">
                {{# unread_comments}}
                  <h5>Unread Comments</h5>
                  {{# comments}}
                    <a href="/photo/{{photo_id}}">{{unread_comments_on_photo}} unread comments on "{{title}}"</a>
                  {{/ comments}}

                  {{^ comments}}
                    You're all caught up!
                  {{/ comments}}
                {{/ unread_comments}}
              </div>
            </span>
            </a>
          {{/ is_logged_in}}

          {{# is_logged_out}}
            <a href="#" id="log-in">Log In</a>
          {{/ is_logged_out}}
        </div>
      </div>
    </header>
